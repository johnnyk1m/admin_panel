      <%= form_for(@cohort) do |c| %>

      <label> Cohort</label><br>
      <%= c.text_field :name %><br>

      <label>Start: </label><br>
      <%= c.date_field :start_date %><br>

      <label>End: </label><br>
      <%= c.date_field :end_date %><br>
      
      <label>Select Teacher</label><br>
      <%= collection_select(:cohort, :teacher_id, Teacher.all, :id, :teacher_full_name, {include_blank: true}) %><br>
      
      <label>Select Course</label><br>
      <%= select(:cohort, :course_id, Course.all.collect{ |course| ["#{course.id}: #{course.name}"]},{include_blank: true })%>
      <br>

      <label>Select Students</label><br>
      <%= collection_select(:cohort, :student_ids, Student.all, :id, :student_full_name, {include_blank: true},{:multiple => true, class: 'chosen-select'}) %> <br>

      <br>

      <%= c.submit "Save", {class: "btn btn-success" }%>
      
      <% end %>
      <br>
      <%= link_to "Back", :back %>