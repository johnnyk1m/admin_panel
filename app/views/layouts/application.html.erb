<!DOCTYPE html>
<html>
  <head>
    <title>Panel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container">

  <!-- Devise -->
  <p class="alert-success"><%= notice %></p>
  <p class="alert-danger"><%= alert %></p>

<div class="row">
  <div class="navbar-text pull-right">
    <% if user_signed_in? %>
      Logged in as <strong><%= current_user.email %></strong>.
      <%= link_to 'Home', home_index_path, :class => 'navbar-link' %> |
      <%= link_to 'Teachers', teachers_path, :class => 'navbar-link' %> |
      <%= link_to 'Students', students_path, :class => 'navbar-link' %> |
      <%= link_to 'Courses', courses_path, :class => 'navbar-link' %> |
      <%= link_to 'Cohorts', cohorts_path, :class => 'navbar-link' %> |
      <%= link_to 'Admin', users_path, :class => 'navbar-link' %> |
      <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
    <% end %>
  </div>
</div>

    <%= yield %>

  </body>
</html>
